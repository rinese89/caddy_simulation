<?xml version="1.0"?>
<robot name="caddy">

  <!-- Root sin inercia -->
  <link name="base_footprint"/>

  <joint name="base_to_base" type="fixed">
    <parent link="base_footprint"/>
    <child  link="base_link"/>
  </joint>

  <!-- Aquí sí va la inercia -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.14395"/>
      <inertia ixx="0.095329" ixy="0" ixz="0"
               iyy="0.381317" iyz="0" izz="0.476646"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.4" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://caddy_ai2_ros2_simulation/meshes/stl/rbcar_chassis.stl" scale="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.4" rpy="0 0 0"/>
      <geometry><box size="2 1 0.1"/></geometry>
    </collision>
  </link>

  <!-- Traseras Izquierda (eje Y) -->

  <link name="wheel_left_back_link"/>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.212" radius="0.28"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.212" radius="0.28"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="043333" ixy="0.0" ixz="0.0" iyy="043333" iyz="0.0" izz="0.08"/>
    </inertial>
  <joint name="wheel_left_back_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="wheel_left_back_link"/>
    <origin xyz="-0.825 0.5034 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Traseras Derecha (eje Y) -->

  <link name="wheel_right_back_link"/>
  <joint name="wheel_right_back_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="wheel_right_back_link"/>
    <origin xyz="-0.825 -0.5034 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Dirección delantera: hub (Z) + rueda (Y) -->
  <link name="left_front_hub_link"/>
  <joint name="left_front_steer_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="left_front_hub_link"/>
    <origin xyz="0.825 0.5034 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.61" upper="0.61"/>
  </joint>

  <link name="wheel_left_front_link"/>
  <joint name="left_front_wheel_joint" type="continuous">
    <parent link="left_front_hub_link"/>
    <child  link="wheel_left_front_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_front_hub_link"/>
  <joint name="right_front_steer_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="right_front_hub_link"/>
    <origin xyz="0.825 -0.5034 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.61" upper="0.61"/>
  </joint>

  <link name="wheel_right_front_link"/>
  <joint name="right_front_wheel_joint" type="continuous">
    <parent link="right_front_hub_link"/>
    <child  link="wheel_right_front_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>
