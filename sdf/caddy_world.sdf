<?xml version="1.0" ?>
<sdf version="1.10">
    <world name="caddy_world">
        <physics name="1ms" type="ignored">
            <max_step_size>0.001</max_step_size>
            <real_time_factor>1.0</real_time_factor>
        </physics>

        <!--Plugins para la GUI y el mundo-->
        <plugin
            filename="gz-sim-physics-system"
            name="gz::sim::systems::Physics">
        </plugin>
        <plugin
            filename="gz-sim-user-commands-system"
            name="gz::sim::systems::UserCommands">
        </plugin>
        <plugin
            filename="gz-sim-scene-broadcaster-system"
            name="gz::sim::systems::SceneBroadcaster">
        </plugin>

        <!--IMU sensor to loaded-->
        <plugin
            filename="gz-sim-imu-system"
            name="gz::sim::systems::Imu">
        </plugin>

        <!--LiDAR sensor loaded-->
        <plugin
            filename="gz-sim-sensors-system"
            name="gz::sim::systems::Sensors">
            <render_engine>ogre2</render_engine>
        </plugin>

        <!--Caracteristicas del mundo-->

        <light type="directional" name="sun">
            <cast_shadows>true</cast_shadows>
            <pose>0 0 10 0 0 0</pose>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
            <attenuation>
                <range>1000</range>
                <constant>0.9</constant>
                <linear>0.01</linear>
                <quadratic>0.001</quadratic>
            </attenuation>
            <direction>-0.5 0.1 -0.9</direction>
        </light>

        <model name="ground_plane">
            <static>true</static>
            <link name="link">
                <collision name="collision">
                <geometry>
                    <plane>
                    <normal>0 0 1</normal>
                    </plane>
                </geometry>
                </collision>
                <visual name="visual">
                <geometry>
                    <plane>
                    <normal>0 0 1</normal>
                    <size>100 100</size>
                    </plane>
                </geometry>
                <material>
                    <ambient>0.8 0.8 0.8 1</ambient>
                    <diffuse>0.8 0.8 0.8 1</diffuse>
                    <specular>0.8 0.8 0.8 1</specular>
                </material>
                </visual>
            </link>
        </model>

         <!-- Caja -->
        <model name="box_1">
          <static>true</static>
          <pose>5 0 0.5 0 0 0</pose>
          <link name="link_box_1">
            <collision name="collision">
              <geometry>
                <box>
                  <size>2 3 1</size>
                </box>
              </geometry>
            </collision>
            <visual name="visual">
              <geometry>
                <box>
                  <size>2 3 1</size>
                </box>
              </geometry>
              <material>
                <diffuse>0.8 0.1 0.1 1</diffuse>
              </material>
            </visual>
          </link>
        </model>

           <!-- Caja -->
        <model name="box_2">
          <static>true</static>
          <pose>0 5 0.5 0 0 0</pose>
          <link name="link_box_2">
            <collision name="collision">
              <geometry>
                <box>
                  <size>3 2 1</size>
                </box>
              </geometry>
            </collision>
            <visual name="visual">
              <geometry>
                <box>
                  <size>3 2 1</size>
                </box>
              </geometry>
              <material>
                <diffuse>0.8 0.1 0.1 1</diffuse>
              </material>
            </visual>
          </link>
        </model>

        <model name='caddy' canonical_link='base_footprint'>
            <pose relative_to='world'>0 0 0 0 0 0</pose>

             <link name="base_footprint">
                <pose relative_to="__model__">0 0 0 0 0 0</pose>
            </link>
        
            <!--base_link-->
            <link name='base_link'>
                <pose relative_to="base_footprint">0 0 0.2 0 0 0</pose>
                <inertial> <!--inertial properties of the link mass, inertia matix-->
                    <mass>1.14395</mass>
                    <inertia>
                        <ixx>0.095329</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>0.381317</iyy>
                        <iyz>0</iyz>
                        <izz>0.476646</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                         <mesh>
                          <scale>1 1 1</scale>
                          <uri>file:///home/rinese/caddy_ws/src/caddy_pkg/stl/rbcar_chassis.stl</uri>
                        </mesh>
                    </geometry>
                    <!--color-->
                    <material>
                        <ambient>0.0 0.0 1.0 1</ambient>
                        <diffuse>0.0 0.0 1.0 1</diffuse>
                        <specular>0.0 0.0 1.0 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <box>
                            <size>2.0 1.0 0.1</size>
                        </box>
                    </geometry>
                </collision>

                 <!--Sensor IMU definition-->
                <sensor name="imu_sensor" type="imu">
                    <always_on>1</always_on>
                    <update_rate>1</update_rate>
                    <visualize>true</visualize>
                    <topic>imu</topic>
                </sensor>
            </link>

            <!--Joint base_footprint - base_link Link-->

            <joint name="base_to_base" type="fixed">
                <parent>base_footprint</parent>
                <child>base_link</child>
            </joint>

            <!--Joint LiDAR Link-->
            <joint name='scan_joint' type='fixed'>
                <pose relative_to='base_scan'/>
                
                <parent>base_link</parent>
                <child>base_scan</child>
            </joint>

             <!--Lidar Link-->
            <link name='base_scan'>
                <pose relative_to="base_link">1.0 0 0.2 0 0 0</pose>
                <inertial>
                    <mass>1</mass>
                    <inertia>
                        <ixx>0.043333</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>0.043333</iyy>
                        <iyz>0</iyz>
                        <izz>0.08</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <cylinder>
                            <radius>0.1</radius>
                            <length>0.2</length>
                        </cylinder>
                    </geometry>
                    <material>
                        <ambient>1.0 1.0 0.0 1</ambient>
                        <diffuse>1.0 1.0 0.0 1</diffuse>
                        <specular>1.0 1.0 0.0 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <cylinder>
                            <radius>0.1</radius>
                            <length>0.2</length>
                        </cylinder>
                    </geometry>
                </collision>
              
                <!--Sensor LiDAR definition-->
                <sensor name='gpu_lidar' type='gpu_lidar'>"
                    <pose relative_to='base_scan'>0 0 0 0 0 0</pose>
                    <frame_name>base_scan</frame_name>
                    <topic>scan</topic>
                    <update_rate>10</update_rate>
                    <ray>
                        <scan>
                            <horizontal>
                            <samples>640</samples>
                            <resolution>1</resolution>
                            <min_angle>-1.396263</min_angle>
                            <max_angle>1.396263</max_angle>
                            </horizontal>
                            <vertical>
                            <samples>1</samples>
                            <resolution>0.01</resolution>
                            <min_angle>0</min_angle>
                            <max_angle>0</max_angle>
                            </vertical>
                        </scan>
                    <range>
                        <min>0.08</min>
                        <max>20.0</max>
                        <resolution>0.01</resolution>
                    </range>
                    </ray>
                    <always_on>1</always_on>
                    <visualize>true</visualize>
                </sensor>
            </link>
  
            <!--left back wheel-->
            <link name='wheel_left_back_link'>
                <pose relative_to="base_link">-0.825 0.5034 0 -1.5707 0 0</pose>
                <inertial>
                    <mass>1</mass>
                    <inertia>
                        <ixx>0.043333</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>0.043333</iyy>
                        <iyz>0</iyz>
                        <izz>0.08</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <cylinder>
                            <radius>0.28</radius>
                            <length>0.212</length>
                        </cylinder>
                    </geometry>
                    <material>
                        <ambient>1.0 0.0 0.0 1</ambient>
                        <diffuse>1.0 0.0 0.0 1</diffuse>
                        <specular>1.0 0.0 0.0 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <cylinder>
                            <radius>0.28</radius>
                            <length>0.212</length>
                        </cylinder>
                    </geometry>
                </collision>
            </link>

             <!--Joint Left wheel-->
            <joint name='wheel_left_back_joint' type='revolute'>
                <pose relative_to='wheel_left_back_link'/>
                
                <parent>base_link</parent>
                <child>wheel_left_back_link</child>

                <axis>
                    <xyz expressed_in='__model__'>0 1 0</xyz> <!--can be descired to any frame or even arbitrary frames-->
                    <limit>
                        <lower>-1.79769e+308</lower>    <!--negative infinity-->
                        <upper>1.79769e+308</upper>     <!--positive infinity-->
                    </limit>
                </axis>
            </joint>

            <!--right back wheel-->
             <link name='wheel_right_back_link'>
                <pose relative_to="base_link">-0.825 -0.5034 0 -1.5707 0 0</pose>
                <inertial>
                    <mass>1</mass>
                    <inertia>
                        <ixx>0.043333</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>0.043333</iyy>
                        <iyz>0</iyz>
                        <izz>0.08</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <cylinder>
                            <radius>0.28</radius>
                            <length>0.212</length>
                        </cylinder>
                    </geometry>
                    <material>
                        <ambient>1.0 0.0 0.0 1</ambient>
                        <diffuse>1.0 0.0 0.0 1</diffuse>
                        <specular>1.0 0.0 0.0 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <cylinder>
                            <radius>0.28</radius>
                            <length>0.212</length>
                        </cylinder>
                    </geometry>
                </collision>
            </link>

            <!--Joint Right wheel-->
            <joint name='wheel_right_back_joint' type='revolute'>
                <pose relative_to='wheel_right_back_link'/>
                <parent>base_link</parent>
                <child>wheel_right_back_link</child>
                <axis>
                    <xyz expressed_in='__model__'>0 1 0</xyz>
                    <limit>
                        <lower>-1.79769e+308</lower>    <!--negative infinity-->
                        <upper>1.79769e+308</upper>     <!--positive infinity-->
                    </limit>
                </axis>
            </joint>

            <!-- Hub (mangueta) delantero izquierdo -->
            <link name='left_front_hub_link'>
              <pose relative_to="base_link">0.825 0.5034 0 0 0 0</pose>
              <inertial>
                <mass>0.3</mass>
                <inertia>
                  <ixx>1e-3</ixx><ixy>0</ixy><ixz>0</ixz>
                  <iyy>1e-3</iyy><iyz>0</iyz><izz>1e-3</izz>
                </inertia>
              </inertial>
            </link>

            <!-- Rueda delantera izquierda -->
            <link name='wheel_left_front_link'>
              <!-- Rotamos el cilindro -90º sobre X para que su eje quede en Y (como tus traseras) -->
              <pose relative_to="left_front_hub_link">0 0 0 -1.5707 0 0</pose>
              <inertial>
                <mass>1</mass>
                <inertia>
                  <ixx>0.043333</ixx><ixy>0</ixy><ixz>0</ixz>
                  <iyy>0.043333</iyy><iyz>0</iyz><izz>0.08</izz>
                </inertia>
              </inertial>
              <visual name='visual'>
                <geometry><cylinder><radius>0.28</radius><length>0.212</length></cylinder></geometry>
              </visual>
              <collision name='collision'>
                <geometry><cylinder><radius>0.28</radius><length>0.212</length></cylinder></geometry>
              </collision>
            </link>

            <!-- Articulación de dirección (vertical Z) -->
            <joint name='left_front_steer_joint' type='revolute'>
              <parent>base_link</parent>
              <child>left_front_hub_link</child>
              <axis>
                <xyz expressed_in='__model__'>0 0 1</xyz>
                <limit>
                  <!-- límites de dirección, p.ej. ±35º -->
                  <lower>-0.61</lower>
                  <upper>0.61</upper>
                  <effort>1000.0</effort>
                </limit>
                <dynamics>
                  <damping>0.5</damping>
                </dynamics>
              </axis>
            </joint>

            <!-- Articulación de giro de la rueda (lateral Y) -->
            <joint name='left_front_wheel_joint' type='revolute'>
              <parent>left_front_hub_link</parent>
              <child>wheel_left_front_link</child>
              <axis>
                <xyz expressed_in='__model__'>0 1 0</xyz>
                <limit>
                  <lower>-1.79769e+308</lower>
                  <upper> 1.79769e+308</upper>
                </limit>
                <dynamics>
                  <damping>0.1</damping>
                </dynamics>
              </axis>
            </joint>

            <!-- Hub (mangueta) delantero derecho -->
            <link name='right_front_hub_link'>
              <pose relative_to="base_link">0.825 -0.5034 0 0 0 0</pose>
              <inertial>
                <mass>0.3</mass>
                <inertia>
                  <ixx>1e-3</ixx><ixy>0</ixy><ixz>0</ixz>
                  <iyy>1e-3</iyy><iyz>0</iyz><izz>1e-3</izz>
                </inertia>
              </inertial>
            </link>
            
            <!-- Rueda delantera derecha -->
            <link name='wheel_right_front_link'>
              <!-- Rotamos el cilindro -90º sobre X para que su eje quede en Y (como tus traseras) -->
              <pose relative_to="right_front_hub_link">0 0 0 -1.5707 0 0</pose>
              <inertial>
                <mass>1</mass>
                <inertia>
                  <ixx>0.043333</ixx><ixy>0</ixy><ixz>0</ixz>
                  <iyy>0.043333</iyy><iyz>0</iyz><izz>0.08</izz>
                </inertia>
              </inertial>
              <visual name='visual'>
                <geometry><cylinder><radius>0.28</radius><length>0.212</length></cylinder></geometry>
              </visual>
              <collision name='collision'>
                <geometry><cylinder><radius>0.28</radius><length>0.212</length></cylinder></geometry>
              </collision>
            </link>
            
            <!-- Articulación de dirección (vertical Z) -->
            <joint name='right_front_steer_joint' type='revolute'>
              <parent>base_link</parent>
              <child>right_front_hub_link</child>
              <axis>
                <xyz expressed_in='__model__'>0 0 1</xyz>
                <limit>
                  <!-- límites de dirección, p.ej. ±35º -->
                  <lower>-0.61</lower>
                  <upper>0.61</upper>
                  <effort>1000.0</effort>
                </limit>
                <dynamics>
                  <damping>0.5</damping>
                </dynamics>
              </axis>
            </joint>
            
            <!-- Articulación de giro de la rueda (lateral Y) -->
            <joint name='right_front_wheel_joint' type='revolute'>
              <parent>right_front_hub_link</parent>
              <child>wheel_right_front_link</child>
              <axis>
                <xyz expressed_in='__model__'>0 1 0</xyz>
                <limit>
                  <lower>-1.79769e+308</lower>
                  <upper> 1.79769e+308</upper>
                </limit>
                <dynamics>
                  <damping>0.1</damping>
                </dynamics>
              </axis>
            </joint>
          
            <!-- Plugin para ros2_control -->
            <ros2_control name="GazeboSimSystem" type="system">
              <hardware>
                <plugin>gz_ros2_control/GazeboSimSystem</plugin>
              </hardware>
              <joint name="wheel_left_back_joint">
                <command_interface name="velocity"/>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
              </joint>
              <joint name="wheel_left_back_joint">
                <command_interface name="velocity"/>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
              </joint>
              <joint name="right_front_steer_joint">
                <command_interface name="position"/>
                <state_interface name="position"/>
              </joint>
               <joint name="left_front_steer_joint">
                <command_interface name="position"/>
                <state_interface name="position"/>
              </joint>
            </ros2_control>
        

            <plugin filename="libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
                <parameters>/home/rinese/caddy_ws/src/caddy_pkg/config/ros2_controller_caddy.yaml</parameters>
                <robot_param>robot_description</robot_param>
                <robot_param_node>robot_state_publisher</robot_param_node>
                <ros>
                  <param name="use_sim_time">true</param>
                </ros>
            </plugin>

        </model>
    </world>
</sdf>
