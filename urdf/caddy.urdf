<?xml version="1.0"?>
<robot name="caddy">

  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="dark">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>
  <material name="light_black">
    <color rgba="0.4 0.4 0.4 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>
  <material name="orange">
    <color rgba="1.0 0.4235 0.0392 1.0"/>
  </material>
  <material name="brown">
    <color rgba="0.8706 0.8118 0.7647 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <!-- Root sin inercia Base_footprint -->
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
  </joint>

  <!-- base link -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.14395"/>
      <inertia ixx="0.095329" ixy="0" ixz="0"
               iyy="0.381317" iyz="0" izz="0.476646"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://caddy_pkg/stl/rbcar_chassis.stl" scale="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.4" rpy="0 0 0"/>
      <geometry><box size="2 1 0.1"/></geometry>
    </collision>
  </link>

  <!-- Trasera Izquierda (eje Z) -->

  <joint name="wheel_left_back_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_back_link"/>
    <origin xyz="-0.825 0.5034 0" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_left_back_link">

    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.212" radius="0.28"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.212" radius="0.28"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="043333" ixy="0.0" ixz="0.0" iyy="043333" iyz="0.0" izz="0.08"/>
    </inertial>

  </link>

  <!-- Trasera Derecha (eje Z) -->

  <joint name="wheel_right_back_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_back_link"/>
    <origin xyz="-0.825 -0.5034 0" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_right_back_link">

    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.212" radius="0.28"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.212" radius="0.28"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="043333" ixy="0.0" ixz="0.0" iyy="043333" iyz="0.0" izz="0.08"/>
    </inertial>

  </link>

  <!-- DELANTERAS-->
  
  <!-- Mangueta de dirección Izquierda-->

  <joint name='left_front_steer_joint' type='continuous'>
    <parent link="base_link"/>
    <child link="left_front_hub_link"/>
    <origin xyz="0.825 0.5034 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" velocity="1.0" lower="-0.5" upper="0.5"/>
  </joint>

  <link name="left_front_hub_link">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3"/>
    </inertial>
  </link>

  <!-- Rueda delantera izquierda -->
  <joint name="left_front_wheel_joint" type="fixed">
    <parent link="left_front_hub_link"/>
    <child link="wheel_left_front_link"/>
    <origin xyz="0 0 0" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_left_front_link">

    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.212" radius="0.28"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.212" radius="0.28"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="043333" ixy="0.0" ixz="0.0" iyy="043333" iyz="0.0" izz="0.08"/>
    </inertial>

  </link>

  <!-- Mangueta de dirección Derecha-->

  <joint name='right_front_steer_joint' type='continuous'>
    <parent link="base_link"/>
    <child link="right_front_hub_link"/>
    <origin xyz="0.825 -0.5034 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" velocity="1.0" lower="-0.5" upper="0.5"/>
  </joint>

  <link name="right_front_hub_link">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3"/>
    </inertial>
  </link>

  <!-- Rueda delantera derecha -->
  <joint name="right_front_wheel_joint" type="fixed">
    <parent link="right_front_hub_link"/>
    <child link="wheel_right_front_link"/>
    <origin xyz="0 0 0" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_right_front_link">

    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.212" radius="0.28"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.212" radius="0.28"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="043333" ixy="0.0" ixz="0.0" iyy="043333" iyz="0.0" izz="0.08"/>
    </inertial>

  </link>

  <!-- LIDAR -->

  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin rpy="0 0 0" xyz="1.0 0 0.15"/>
  </joint>
  <link name="base_scan">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.0"/>
      <geometry>
        <cylinder length="0.2" radius="0.1"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.0 0 0.0"/>
      <geometry>
        <cylinder length="0.2" radius="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.043333" ixy="0.0" ixz="0.0" iyy="0.043333" iyz="0.0" izz="0.08"/>
    </inertial>
  </link>



  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>
    <joint name="wheel_left_back_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="wheel_right_back_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="right_front_steer_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
     <joint name="left_front_steer_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>

</robot>
